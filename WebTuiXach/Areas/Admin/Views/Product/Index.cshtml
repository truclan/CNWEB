@using WebTuiXach.Models;
@model List<product>
@{
    Layout = "~/Areas/Admin/Views/Shared/_adminView.cshtml";
}

<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="card text-left mb-2">
            <div class="card-body p-3">
                <ol class="breadcrumb bg-transparent">
                    <li class="breadcrumb-item active text-dark">Trang chủ</li>
                </ol>
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="card text-left">
            @Html.ActionLink("Create new", "addProduct", new { @class = "px-3 pt-3" })
            <div class="main-title p-3">Danh sách sản phẩm</div>
            <div class="card-body px-3 pb-0 pt-0">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Tên sản phẩm</th>                            
                            <th scope="col">Giá</th>                            
                            <th scope="col">Hình ảnh</th>                            
                            <th scope="col">Số lượng</th>                            
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int index = 0;
                        }
                        @foreach (var item in Model)
                        {
                            index++;
                            <tr>
                                <td>@index</td>
                                <td>@item.name</td>
                                <td>@item.price</td>
                                <td><img src="~/asset/uploads/img/@item.path" alt="Product" width="50"/></td>
                                <td>@item.quantity</td>
                                <td class="d-flex">
                                    <a href="@Url.Action("editProduct", "Product", new { id = item.id })" class="btn btn-outline-primary btn-sm"><span class="material-icons md-13">edit</span></a>
                                    <a href="@Url.Action("removeProduct", "Product", new { id = item.id })" class="btn btn-outline-danger btn-sm"><span class="material-icons md-13">clear</span></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>